{
  "name": "mcp-server-code-review",
  "version": "1.1.2",
  "description": "MCP server for code reviews - connects LLMs to GitHub and GitLab to analyze Merge/Pull Requests and provide expert feedback",
  "type": "module",
  "bin": {
    "mcp-server-code-review": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "code-review",
    "github",
    "gitlab",
    "pull-request",
    "merge-request",
    "llm",
    "claude",
    "gemini"
  ],
  "author": "info@danielefavi.com",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielefavi/mcp-server-code-review.git"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@gitbeaker/rest": "^43.8.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "octokit": "^5.0.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.8",
    "@vitest/coverage-v8": "^4.0.17",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
